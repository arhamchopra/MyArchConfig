# shortcut for launching applications
# Mode desktop-applications for running desktop applications
mode "desktop-applications" {
        # These bindings trigger as soon as you enter the desktop mode

        bindsym f exec "firefox" mode "default"
        bindsym m exec "spotify" mode "default"
        bindsym b exec "pcmanfm" mode "default"
        bindsym c exec "zenity --calendar" mode "default"
        bindsym p exec "tint2" mode "default"
        bindsym shift+P exec "killall tint2" mode "default"

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}
bindsym $mod+Shift+A mode "desktop-applications"

# using shortcut keys
bindsym XF86MonBrightnessUp exec light -A 5
bindsym XF86MonBrightnessDown exec light -U 5
