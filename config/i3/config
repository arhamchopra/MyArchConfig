# Create a mode to support the different modes or rofi
mode "rofi" {
        # These bindings trigger as soon as you enter the rofi mode

        # Pressing w will start the window switcher.
        # Pressing s will start the ssh launcher.
        # Pressing r will start the run menu.
        # Pressing w will start the window switcher.
        bindsym w exec "rofi -show window" mode "default"
        bindsym s exec "rofi -show ssh" mode "default"
        bindsym r exec "rofi -show run" mode "default"
        bindsym d exec "rofi -show drun" mode "default"
        # bindsym f exec "dmenu_extended_run" mode "default"
        bindsym f exec "exec ~/scripts/file_search.sh" mode default
        # bindsym f exec "xdg-open $(locate home | rofi -threads 4 -width 100 -dmenu -z -i -p locate:)" mode "default"
        # bindsym f exec "rofi -modi 'file:~/rofi-file-browser.sh,drun' -show file" mode "default"
        bindsym g exec "dmenu_extended_run '-> Internet search: ' 'Google'" mode "default"


        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+space mode "rofi"
for_window [instance="file_search_terminal"] floating enable

